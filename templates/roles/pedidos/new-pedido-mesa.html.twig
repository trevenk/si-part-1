{% extends 'base.html.twig' %}

{% block body %}
    <body class="mt-5">
        <div class="container text-center">


            <section>
                <nav>
                    <div class="nav nav-tabs justify-content-center mt-5" id="nav-tab" role="tablist">
                        {% for area in areas %}
                            <a class="nav-item nav-link" id="nav-{{ area['nombre'] }}-tab" data-toggle="tab" href="#nav-{{ area['nombre'] }}" role="tab" aria-controls="nav-{{ area['nombre'] }}">{{ area['nombre'] }}</a>
                        {% endfor %}
                    </div>
                </nav>
                <div class="tab-content mt-5" id="nav-tabContent">
                    {% for area in areas %}
                        <div class="tab-pane fade show" id="nav-{{ area['nombre'] }}" role="tabpanel" aria-labelledby="nav-{{ area['nombre'] }}-tab">
                            {% for i in 1..area['mesas'] %}
                                <div class="card mt-2 shadow-lg">
                                    <div class="card-body">
                                        <h5 class="card-title">{{ area['nombre'] }}/{{ i }}</h5>
                                        <h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6>
                                        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                                        <a href="#" class="card-link">Card link</a>
                                        <a href="#" class="card-link">Another link</a>
                                    </div>
                                </div>
                            {% endfor %}

                        </div>

                    {% endfor %}

                    <h1 class="mt-5">Seleccione &aacute;rea y mesa</h1>
                </div>
            </section>
        </div>
    </body>




{% endblock %}